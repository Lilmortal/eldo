{
  "name": "eldo",
  "version": "1.0.0",
  "repository": "https://github.com/Lilmortal/eldo.git",
  "author": "Jack Tan <jacktan165@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "lerna run start --scope eldo --stream",
    "start:ui": "lerna run start --scope @eldo/ui --stream",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "bootstrap": "lerna bootstrap",
    "deploy": "lerna publish --no-commit-hooks",
    "precommit": "lerna run precommit --stream",
    "login:npm": "npm-cli-login"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn precommit"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.4"
  },
  "dependencies": {
    "npm-cli-login": "^0.1.1"
  }
}
