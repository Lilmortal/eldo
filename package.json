{
  "name": "eldo",
  "version": "1.0.0",
  "repository": "https://github.com/Lilmortal/eldo.git",
  "author": "Jack Tan <jacktan165@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn --cwd ./web/app start",
    "start:sb": "start-storybook -p 9000",
    "compile": "lerna run compile --stream",
    "build": "lerna run build --stream --parallel",
    "build:sb": "build-storybook",
    "lint:css": "npx stylelint packages/**/*.css web/app/**/*.css --fix --allow-empty-input",
    "lint:ts": "npx eslint packages/**/*.ts{,x} web/app/**/*.ts{,x} --fix --no-error-on-unmatched-pattern",
    "lint": "run-p -c 'lint:* --fix'",
    "test": "jest --watch",
    "test:ci": "jest",
    "release": "lerna publish --no-commit-hooks",
    "login:npm": "npm-cli-login"
  },
  "workspaces": [
    "packages/**/*",
    "web/**/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint:ts"
    ],
    "**/*.css": [
      "yarn lint:css"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-actions": "^5.3.9",
    "@storybook/addon-knobs": "^5.3.9",
    "@storybook/addon-links": "^5.3.9",
    "@storybook/addons": "^5.3.9",
    "@storybook/react": "^5.3.9",
    "@testing-library/jest-dom": "^5.0.2",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^25.1.1",
    "@types/react": "^16.9.19",
    "@types/storybook__addon-actions": "^5.2.1",
    "@types/storybook__addon-knobs": "^5.2.1",
    "@types/storybook__addon-links": "^5.2.1",
    "@types/storybook__react": "^5.2.1",
    "@types/vfile-message": "^2.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "npm-cli-login": "^0.1.1"
  }
}
