{
  "name": "eldo",
  "version": "1.0.0",
  "repository": "https://github.com/Lilmortal/eldo.git",
  "author": "Jack Tan <jacktan165@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "lerna run start --scope eldo --stream",
    "start:ui": "lerna run start --scope @eldo/ui --stream",
    "bootstrap": "lerna bootstrap",
    "pub": "lerna publish --no-commit-hooks",
    "lint": "lerna run lint"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.1",
    "lerna": "^3.20.2"
  }
}
