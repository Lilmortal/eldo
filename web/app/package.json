{
  "name": "@eldo/app",
  "version": "1.9.1",
  "main": "./webpack.dev.js",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server  --open --config ./webpack.dev.js",
    "test": "jest --watch",
    "test:ci": "jest",
    "lint:css": "stylelint **/*.css --fix --allow-empty-input",
    "lint:ts": "eslint **/*.ts{,x} --fix --no-error-on-unmatched-pattern",
    "lint": "run-p -c 'lint:* --fix'",
    "build": "webpack --config ./webpack.prod.js"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint:ts"
    ],
    "**/*.css": [
      "yarn lint:css"
    ]
  },
  "peerDependencies": {
    "@eldo/eslint-config-lint-tool": "^1.1.0",
    "@eldo/webpack": "^1.2.1",
    "@storybook/react": "^5.3.9",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@eldo/button": "^1.14.1",
    "@eldo/jest-config": "^1.3.0"
  }
}
